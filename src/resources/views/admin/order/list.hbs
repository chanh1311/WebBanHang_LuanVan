<div>
      <div class="text-center mt-3"><h2>DANH SÁCH ĐƠN HÀNG MỚI</h2></div>
       {{#if message}}
          <div class="alert alert-danger text-center" role="alert">
              {{message}}
          </div>
      {{/if}}
      <table id="dataOrder1" class="table table-light" style="width:100%">
          <thead class="table-dark">
              <tr>
                <th scope="col">Mã đơn</th>
                <th scope="col">Tên khách hàng</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Email</th>
                <th scope="col">Địa chỉ giao</th>
                <th scope="col" style="width: 70px;">Sản phẩm</th>
                <th scope="col">Tổng số tiền</th>
                <th scope="col">Thời gian đặt hàng</th>
                <th scope="col">Trạng thái</th>
                <th scope="col" style="width: 80px;">Thao tác</th>
              </tr>
            </thead>
            <tbody>
            {{#each newOrder}}
              <tr>
                 <td style="font-weight: bold;">#{{sliceId this._id 6}}</td>
                 <td>{{this.hoten}}</td>
                 <td>{{this.phone}}</td>
                 <td>{{this.email}}</td>
                 <td>{{this.diachi}}</td>
                 <td><a href="/admin/list-order/list-product/{{this._id}}" class="btn btn-sm btn-info">Sản phẩm</a></td>
                 <td><span class="text-danger">{{parsePrice this.tongtien}}</span><br><b>{{#if this.method}}Đã thanh toán với Paypal{{else}}Thanh toán khi nhận hàng{{/if}}</b></td>
                 <td>{{convertDate this.createdAt}}</td>
                 <td class="text-secondary">CHƯA XÁC NHẬN</td>
                 <td>
                    <button class="btn-confirm-order btn-size btn btn-primary btn-sm" value="{{this._id}}"><i class="fa-solid fa-check"></i> Xác nhận</button>
                    <button class="btn-cancel-order btn-size btn-danger btn-sm" value="{{this._id}}"><i class="fa-solid fa-cancel"></i> Hủy đơn</button>
                 </td>
              </tr>
            {{/each}}
            </tbody>
              <tfoot class="table-dark">
                  <tr>
                    <th scope="col">Mã đơn</th>
                    <th scope="col">Tên khách hàng</th>
                    <th scope="col">Số điện thoại</th>
                    <th scope="col">Email</th>
